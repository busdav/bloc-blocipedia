<h1>Update Collaborators on your private wiki</h1>
<%= form_for @wiki, url: final_update_collaborators_wiki_path, method: :put do |user| %>
  <div class="span5">
    <table>
    <thead>
      <tr>
        <th>User Name</th>
        <th>Email</th>
        <th>Add Collaborator?</th>
      </tr>
    </thead>
     <tbody> 
      <% @wiki.collaborators.each do |u| %>
        <tr>
          <td><%= User.find(u.user_id).name %></td>
          <td><%= User.find(u.user_id).email %></td>
          <td>
            <%= check_box_tag "collaborator_id[]", u.id, has_collaborator(@wiki, User.find(u.user_id)) %>
          </td>
        </tr> 
    <% end %>
    </table>
  </div>
  <div class="span5">
    <%= user.submit 'Update collaborators' %>
  </div>
<% end %>